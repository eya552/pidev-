{% extends 'admin/Base.html.twig'%}

{% block title %}
<title>Actualité</title>
{% endblock %}



{% block body %}
<div style="margin-left: 500px; margin-top:100px; margin-right:200px; padding:50px;">
    <h1>Actualite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date_actualite</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td>{{ actualite.id }}</td>
                <td>{{ actualite.titre }}</td>
                <td>{{ actualite.contenu }}</td>
                <td>{{ actualite.dateActualite ? actualite.dateActualite|date('Y-m-d') : '' }}</td>
                <td><img src="{{ asset('media/'~actualite.imageFile) }}" style=" width:60px; height:50px; " alt=""/></td>  
                {# <td><img src=</td> #}
                {# <td>
                    <a href="{{ path('app_actualite_show', {'id': actualite.id}) }}">show</a>
                    <a href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">edit</a>
                    <a href="{{ path('app_actualite_delete', {'id': actualite.id}) }}">Supprimer</a>
                </td> #}
                <td><a class="btn btn-success" href="{{ path('export_actualite_pdf', {'id': actualite.id}) }}">Exporter en PDF</a><td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actualite_new') }}">Ajouter une actualité</a>
    </div>
{% endblock %}
