{%extends 'client/base.html.twig'%}

{% block title %}Register{% endblock %}


{% block body %}

  <main >
    <div class="container"  style='margin-top: 1% ;' >

      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

              <div class="d-flex justify-content-center py-4">
                <a href="index.html" class="logo d-flex align-items-center w-auto">
                  <img src="assets/img/logo.png" alt="">
                  <span class="d-none d-lg-block">NiceAdmin</span>
                </a>
              </div><!-- End Logo -->

              <div class="card mb-3">

                <div class="card-body">

                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                    <p class="text-center small">Enter your personal details to create account</p>
                  </div>
                  {{ form_start(registrationForm) }}
                   <form class="row g-3 needs-validation" novalidate>
                    <div class="col-12">
                      {{ form_row(registrationForm.LastName) }}
                      
                      <input type="text" name="LastName" class="form-control" id="yourName" required>
                      <div class="invalid-feedback">Please, enter your last name!</div>
                    </div>

                    <div class="col-12">
                     {{ form_row(registrationForm.FirestName) }}
                     
                      <input type="text" name="FirestName" class="form-control" id="yourPrenom" required>
                      <div class="invalid-feedback">Please enter enter your first name!</div>
                    </div>
                    <div class="col-12">
                      {{ form_row(registrationForm.tel) }}
                      
                      <input type="tel" name="tel" class="form-control" id="yourTel" required>
                      <div class="invalid-feedback">Please enter a valid Email adddress!</div>
                    </div>
                    <div class="col-12">
                      {{form_row(registrationForm.PetsListId)}}
                     

                      <input type="PetsListId" name="PetsListId" class="form-control" id="YourIdAnimalList " required>
                      <div class="invalid-feedback">Please, enter your enter your pets ID list!</div>
                    </div>
                    <div class="col-12">
                     {{form_row(registrationForm.image)}}
                     
                      <input type="image" name="image" class="form-control" id="yourIdContrat" required>
                      <div class="invalid-feedback">Please enter enter your Id Contrat!</div>
                    </div>

                    <div class="col-12">
                     {{ form_row(registrationForm.IdContrat)}}
                     
                      <input type="IdContrat" name="IdContrat" class="form-control" id="yourIdContrat" required>
                      <div class="invalid-feedback">Please enter enter your Id Contrat!</div>
                    </div>
                    <div class="col-12">
                      {{form_row(registrationForm.paimentMethod)}}
                      
                      <input type="paimentMethod" name="paimentMethod" class="form-control" id="yourPaymentmethod" required>
                      <div class="invalid-feedback">Please enter your Payment method!</div>
                    </div>
                    <div class="col-12">
                      {{ form_row(registrationForm.DateOfBirth) }}
                      <input type="date" name="DateOfBirth" class="form-control" id="yourDateOfBirth" required>

                      <div class="invalid-feedback">Please enter a valid  date of birth!</div>
                    </div>
                      <div class="col-12">
                      {{form_row(registrationForm.Adress)}}
                      


                      <input type="text" name="Adress" class="form-control" id="yourEmail" required>
                      <div class="invalid-feedback">Please enter a valid address!</div>
                    </div>
                    <div class="col-12">
                     
                     {{form_row(registrationForm.email)}}
                      

                      <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">@</span>
                        <input type="email" name="email" class="form-control" id="youremail" required>
                        <div class="invalid-feedback">Please choose a valid email address.</div>
                      </div>
                    </div>
                    
                    <div class="col-12">
                     {{ form_row(registrationForm.password.first, {'label': 'Password'}) }}
                     <input type="password" name="password" class="form-control" id="yourPassword" required>
                     <div class="invalid-feedback">Please enter your password!</div>
                    </div>
                    <div class="col-12">
                     {{ form_row(registrationForm.password.second, {'label': 'Confirm password'}) }}
                     <input type="password" name="password" class="form-control" id="yourPassword" required>
                     <div class="invalid-feedback">Please verify your password!</div>
                    </div>

                    <div class="col-12">
                      <div class="form-check">
                        {{ form_row(registrationForm.agreeTerms) }}
                        <label class="form-check-label" for="acceptTerms">I agree and accept the <a href="#">terms and conditions</a></label>
                        <div class="invalid-feedback">You must agree before submitting.</div>
                      </div>
                    </div>
                    <div class="col-12">
                      <button class="btn btn-primary w-100" type="submit">Register</button>
                    </div>
                    <div class="col-12">
                      <p class="small mb-0">Already have an account? <a href="display_sign-in">Log in</a></p>
                    </div>

                   {{ form_end(registrationForm) }}

                </div>
              </div>

                

              <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
              </div>

            </div>
          </div>
        </div>

      </section>

    </div>
  </main>{% endblock %}