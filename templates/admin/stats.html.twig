							{% else %}
								<canvas id="barChart" style="max-height: 400px; display: block; box-sizing: border-box; height: 400px; width: 840.8px;" width="1051"></canvas>
							{% endif %}
						{% endblock %}

						{% block javascript2 %}
							{% if AnimalsEstSterilise is not empty %}

								<script>
									document.addEventListener("DOMContentLoaded", () => {
new Chart(document.querySelector('#barChart'), {
type: 'bar',

data: {
labels: {{ AnimalsEstSterilise|json_encode|raw }},

datasets: [
{
label: 'Etat Sterilisation',
data: {{ AnimalsEstSteriliseCount|json_encode|raw }},

backgroundColor: {{ AnimalsEstSteriliseColor|json_encode|raw }},

options: {
scales: {
y: {
beginAtZero: true
}
}
}
}
]
}
});
});
								</script>
							{% endif %}
						{% endblock %}
					</div>

				</div>
			</div>

