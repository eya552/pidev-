<!DOCTYPE html>

<title>User index</title>

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>FirestName</th>
                <th>LastName</th>
                <th>Image</th>
                <th>Adress</th>
                <th>Tel</th>
                <th>DateOfBirth</th>
                <th>PetsListId</th>
                <th>IdContrat</th>
                <th>PaimentMethod</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.FirestName }}</td>
                <td>{{ user.LastName }}</td>
                <td><img src="{{ asset('uploads/images/' ~ user.getImage) }}" style=" width:60px; height:50px; " alt=""/></td>                 <td>{{ user.Adress }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.DateOfBirth ? user.DateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ user.PetsListId ? user.PetsListId|join(', ') : '' }}</td>
                <td>{{ user.IdContrat }}</td>
                <td>{{ user.paimentMethod }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
