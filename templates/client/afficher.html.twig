{%extends 'client/Base.html.twig'%}

{% block body %}


<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg " >

    <div class="container-fluid py-4">
        <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Table of animals </h6>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">


              {% if animals %}
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs  opacity-7">Id</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">NomAnimal</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">DateDeNaissance</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">GenreAnimal</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">EstSterilise</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">EstVaccine</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">category</th>
                
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                    </tr>
                  </thead>
                  <tbody>

                  {% for animal in animalsP %}
                    <tr>
                      <td>
                        <div class="d-flex px-2 py-1">
                          
                          <div class="d-flex flex-column justify-content-center"> 
                            <p class="text-xs font-weight-bold mb-0">{{animal.id}}</p>  
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">{{animal.NomAnimal}}</p>  
                      </td>
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs font-weight-bold mb-0">{{ animal.DateDeNaissance ? animal.DateDeNaissance|date('Y-m-d') : ''}}</p>
                      </td>
                       <td>
                        <p class="text-xs font-weight-bold mb-0">{{animal.GenreAnimal}}</p>  
                      </td>
                       <td>
                        <p class="text-xs font-weight-bold mb-0">{{animal.EstSterilise}}</p>  
                      </td>
                       <td>
                        <p class="text-xs font-weight-bold mb-0">{{animal.EstVaccine}}</p>  
                      </td>
                       <td>
                        <p class="text-xs font-weight-bold mb-0">{{animal.category.Espece}}<br/>{{animal.category.Race}}</p>  
                      </td>
                
                      <td class="align-middle">
                   
                        <a href="{{ path('app_animals1_edit', {'id': animal.id}) }}" class="btn btn-warning text-dark px-3 mb-0 " data-toggle="tooltip" data-original-title="Edit user">
                         Modifier
                        </a>
                        <a href="{{ path('app_animals1_show', {'id': animal.id}) }}" class="btn btn-danger text-gradient px-3 mb-0" data-toggle="tooltip" data-original-title="Edit user">
                         Supprimer
                        </a>
                      </td>
                    </tr>

                    {% else %}
                <tr>
                  <td colspan="4">no records found</td>
              </tr>
        
                  {% endfor %}
                    
                  </tbody>
                </table>
                {% endif %}
                <a href="{{ path('app_animals1_new') }}" class="btn btn-success text-gradient px-3 mb-0">Create </a>
                  

              </div>
            </div>
          </div>
        </div>
      </div>
      <df>
        {% for i in 1.. ((total / limit)|round(0,'ceil')) %}
            <de>
                            <a href="?page={{i}}"  > {{i}} </a>
            </de>
             {% endfor %} 
        </df>

      
    </div>
  </main>
  
  {% endblock %}
 